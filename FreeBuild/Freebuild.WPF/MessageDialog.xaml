<Window x:Class="FreeBuild.WPF.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeBuild.WPF"
             mc:Ignorable="d" 
             Height="200" Width="350"
        Topmost="True" WindowStyle="ToolWindow" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:ErrorIcon x:Name="ErrorIcon" Margin="5" Visibility="Collapsed"></local:ErrorIcon>
            <RichTextBox Name="TextBox" 
                         Grid.Column="1"
                         VerticalScrollBarVisibility="Auto"/>
        </Grid>
        <StackPanel Name="ButtonsPanel" Grid.Row="1">
            <Button Name="OKButton" Click="OK_Click" IsDefault="true">OK</Button>
        </StackPanel>
    </Grid>
</Window>
